<%- include('header.ejs') %>

<div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">Create Paste</div>
          <div class="card-body">
            <form action="/createpaste" method="post">
              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Enter title">
              </div>
              <div class="form-group">
                <label for="content">Content</label>
                <textarea class="form-control" id="content" name="content" rows="12" style="font-family:monospace"></textarea>
              </div>
              <div class="d-grid justify-content-center">
                <button type="submit" class="btn btn-primary mt-3">Create paste</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>