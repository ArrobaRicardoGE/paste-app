<%- include('header.ejs') %>

<div class="container-sm d-flex justify-content-center mt-5">
    <div class="card text-center w-75">
        <h4 class="card-header">Sign Up</h4>
        <div class="signup">
            <form action="/register" method="post">
                <div class="form-floating m-3">
                    <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                    <label for="username"><i class="fas fa-user"></i> Username</label>
                </div>
                <div class="form-floating m-3">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                    <label for="email"><i class="fas fa-envelope"></i> Email</label>
                </div>
                <div class="form-floating mb-3 mx-3">
                    <input type="password" class="form-control" id="password1" name="password1" placeholder="Password" required>
                    <label for="password1"><i class="fas fa-lock"></i> Password</label>
                </div>
                <div class="form-floating mb-3 mx-3">
                    <input type="password" class="form-control" id="password2" name="password2" placeholder="Repeat Password" required>
                    <label for="password2"><i class="fas fa-lock"></i> Repeat Password</label>
                </div>
                <button type="submit" class="btn btn-primary mb-3">Sign Up</button>
                <% if(status == 1) { %>
                    <div class="alert alert-danger mb-3 w-50 mx-auto" role="alert">Passwords don't match</div>
                <% } %>
                <% if(status == 2) { %>
                    <div class="alert alert-danger mb-3 w-50 mx-auto" role="alert">Username already taken</div>
                <% } %>
                <% if(status == 3) { %>
                    <div class="alert alert-success mb-3 w-50 mx-auto" role="alert">Account registered! Please, sign in</div>
                <% } %>
            </form>
            <div class="card-footer"><a href="/login">Already have an account? Log in</a></div>
        </div>
    </div>
</div>

</body>
</html>
